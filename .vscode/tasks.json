{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Clang",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "helloworld.cpp",
          "-o",
          "helloworld.out",
          "--debug"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "Build with gcc",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++14",
          "helloworld.cpp",
          "-o",
          "helloworld.out",
          "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "build csharp",
        "command": "dotnet",
        "type": "process",
        "args": [
          "build"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": "$tsc"
      }
    ]
  }