{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Clang",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "helloworld.cpp",
          "-o",
          "helloworld.out",
          "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [ "build" ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": "$tsc"
    }
    ]
  }